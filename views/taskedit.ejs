<!Doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }
        
        body {
            margin: 0px;
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Open Sans", "Helvetica Neue", sans-serif;
        }
        
        header h1 {
            text-align: center;
            font-size: 40px;
            color: white;
        }
        
        header {
            padding: 5px;
            background-color: rgb(17, 91, 143);
        }
        
        nav {
            background-color: rgb(0, 0, 0);
            overflow: hidden;
        }
        
        nav a {
            text-decoration: none;
            padding: 20px;
            text-align: center;
            float: left;
            color: white;
        }
        
        main {
            margin: auto;
            width: 50%;
            border: 3px solid green;
            padding: 10px;
        }
        
        h2 {
            padding: 20px;
        }
        
        section:nth-child(even) {
            background-color: rgb(241, 241, 241);
        }
        
        section {
            min-height: 100vh;
        }
        
        video {
            padding: 10px;
        }
        
        iframe {
            height: 75vh;
        }
        
        img {
            padding: 10px;
        }
        
        section h5 {
            margin: 40px;
        }
        
        footer {
            background-color: #333;
            overflow: hidden;
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
        }
        
        footer a {
            text-decoration: none;
            text-align: center;
            float: center;
            color: white;
        }
        
        footer p {
            text-decoration: none;
            padding: 20px;
            margin: auto;
            text-align: center;
            float: left;
            color: white;
        }
        /* Style inputs */
        
        input[type=text],
        select,
        textarea,
        .mb-3,
        input[type=password] {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            margin-top: 6px;
            margin-bottom: 16px;
            resize: vertical;
        }
        
        .btn-primary {
            background-color: #04AA6D;
            color: white;
            padding: 12px 20px;
            border: none;
            cursor: pointer;
        }
        
        .btn-primary:hover {
            background-color: #45a049;
        }
        /* Style the container/contact section */
        
        .container {
            border-radius: 5px;
            background-color: #f2f2f2;
            padding: 10px;
        }
        /* Create two columns that float next to eachother */
        
        .column {
            float: left;
            width: 50%;
            margin-top: 6px;
            padding: 20px;
        }
        /* Clear floats after the columns */
        
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
        /* Responsive layout - when the screen is less than 600px wide, make the two columns stack on top of each other instead of next to each other */
        
        @media screen and (max-width: 600px) {
            .column,
            .btn-primary {
                width: 100%;
                margin-top: 0;
            }
        }
    </style>

    <title>LMS || TASK ADD</title>

</head>

<body>
    <div>


        <header>
            <h1>Edit Task</h1>
        </header>
        <div class="todo">


            <ul class="list-group">
                <% Tasks.forEach(details=> { %>
                    <% if (details._id==idTask) { %>
                        <li class="list-group-item">
                            <form action="/task/edit/<%= details._id %>" method="POST">
                                <input type="text" style="width: 80%;" value="<%= details.content %>" name="content">
                                <input type="checkbox" style="width: 80%;" value="<%= details.iscomplete %>" name="comp">

                                <button type="submit" class="btn btn-success">Confirm</button>
                                <a type="button" href="/" type="submit" class="btn btn-secondary">Cancel</a>

                            </form>
                        </li>
                        <% } else { %>

                            <% } %>
                                <% }) %>
            </ul>
            <footer>
                <p>

                    <a href="#" class="text-white"></a>
                    <a href="#" class="text-white">Nirmallya dey</a>.
                </p>
            </footer>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous">
        </script>


</body>

</html>
